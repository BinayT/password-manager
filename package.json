{
  "name": "pass-vault-back",
  "version": "1.0.0",
  "description": "Pass vault backend project with Node and express and TS as programming langauge",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "nodemon --watch src --exec \"node --loader ts-node/esm\" src/index.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "migrate:make": "node --loader ts-node/esm src/scripts/knex.ts migrate:make",
    "migrate:latest": "node --loader ts-node/esm src/scripts/knex.ts migrate:latest",
    "migrate:rollback": "node --loader ts-node/esm src/scripts/knex.ts migrate:rollback"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "nodemon": "^3.1.10",
    "pg": "^8.16.2",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.3",
    "@vitest/ui": "^3.2.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
