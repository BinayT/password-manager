{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",    
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node", "express"],
  },
  "include": ["src/**/*"]
}
